    {% render 'AqpglugCodemedoBundle:Block:list' with {
                'type': 'article',
                'field': 'featured',
                'template': 'AqpglugCodemedoBundle:Article:featured.html.twig',
                'limit': 3 } %}

<ul class="articles">
    {% for article in articles %}
        <li>
            <img src="{{ '/bundles/aqpglugcodemedo/images/placeholder.png'|apply_filter('my_thumb') }}" alt="{{ article.title }}" />
            <a href="{{ path("_article_show", {'slug': article.slug}) }}">{{ article.title }}</a><br />
            <span>{#{ article.metadata['extract']|raw }#}A paragraph of <em>text</em>.<br />A second <strong>row</strong> of text.</span>
        </li>
    {% else %}
        <li>no hay articulos</li>
    {% endfor %}
    </ul>
